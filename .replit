modules = ["web", "go-1.21", "nodejs-22"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["hugo"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hugo Dev Server"

[[workflows.workflow]]
name = "Hugo Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "hugo server --bind 0.0.0.0 --port 5000 --baseURL / --disableFastRender --appendPort=false"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
build = ["hugo", "--minify"]
publicDir = "public"
